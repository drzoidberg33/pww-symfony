<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}PlexWatchWeb{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <link href="{{ asset('bundles/pwwcontent/css/plexwatch.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/pwwcontent/css/font-awesome.min.css') }}" rel="stylesheet" >
        <style type="text/css">
          body {
            padding-top: 60px;
            padding-bottom: 40px;
          }
          .sidebar-nav {
            padding: 9px 0;
          }
          .spinner {
            padding-bottom: 25px;
            position: relative;
          }
        </style>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/pwwcontent/images/favicon.ico') }}" />
        
        <!-- touch icons -->
        <link rel="shortcut icon" href="{{ asset('bundles/pwwcontent/images/favicon.ico') }}">
        <link rel="apple-touch-icon" href="{{ asset('bundles/pwwcontent/images/icon_iphone.png') }}">
        <link rel="apple-touch-icon" sizes="72x72" href="{{ asset('bundles/pwwcontent/images/icon_ipad.png') }}">
        <link rel="apple-touch-icon" sizes="114x114" href="{{ asset('bundles/pwwcontent/images/icon_iphone@2x.png') }}">
        <link rel="apple-touch-icon" sizes="144x144" href="{{ asset('bundles/pwwcontent/images/icon_ipad@2x.png') }}">
    </head>
    <body>
        <div class="container">
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <a href="/app_dev.php/"><div class="logo hidden-phone"></div></a>
                    <ul class="nav">
                        {% if page is defined %}
                            <li class="{% if page == 'index' %}active{% endif %}"><a href="/app_dev.php/"><i class="icon-2x icon-home icon-white" data-toggle="tooltip" data-placement="bottom" title="Home" id="home"></i></a></li>
                            <li class="{% if page == 'history' %}active{% endif %}"><a href="history"><i class="icon-2x icon-calendar icon-white" data-toggle="tooltip" data-placement="bottom" title="History" id="history"></i></a></li>
                            <li class="{% if page == 'stats' %}active{% endif %}"><a href="stats"><i class="icon-2x icon-tasks icon-white" data-toggle="tooltip" data-placement="bottom" title="Stats" id="stats"></i></a></li>
                            <li class="{% if page == 'users' %}active{% endif %}"><a href="users"><i class="icon-2x icon-group icon-white" data-toggle="tooltip" data-placement="bottom" title="Users" id="users"></i></a></li>
                            <li class="{% if page == 'charts' %}active{% endif %}"><a href="charts"><i class="icon-2x icon-bar-chart icon-white" data-toggle="tooltip" data-placement="bottom" title="Charts" id="charts"></i></a></li>
                            <li class="{% if page == 'settings' %}active{% endif %}"><a href="settings"><i class="icon-2x icon-wrench icon-white" data-toggle="tooltip" data-placement="bottom" title="Settings" id="settings"></i></a></li>
                        {% else %}
                            <li><a href="/app_dev.php/"><i class="icon-2x icon-home icon-white" data-toggle="tooltip" data-placement="bottom" title="Home" id="home"></i></a></li>
                            <li><a href="history"><i class="icon-2x icon-calendar icon-white" data-toggle="tooltip" data-placement="bottom" title="History" id="history"></i></a></li>
                            <li><a href="stats"><i class="icon-2x icon-tasks icon-white" data-toggle="tooltip" data-placement="bottom" title="Stats" id="stats"></i></a></li>
                            <li><a href="users"><i class="icon-2x icon-group icon-white" data-toggle="tooltip" data-placement="bottom" title="Users" id="users"></i></a></li>
                            <li><a href="charts"><i class="icon-2x icon-bar-chart icon-white" data-toggle="tooltip" data-placement="bottom" title="Charts" id="charts"></i></a></li>
                            <li><a href="settings"><i class="icon-2x icon-wrench icon-white" data-toggle="tooltip" data-placement="bottom" title="Settings" id="settings"></i></a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        {% block body %}{% endblock %}
        
        <script src="{{ asset('bundles/pwwcontent/js/jquery-2.0.3.js') }}"></script>
        <script src="{{ asset('bundles/pwwcontent/js/bootstrap.js') }}"></script>
        <script>
            $(document).ready(function() {
                $('#home').tooltip();
            });
            $(document).ready(function() {
                $('#history').tooltip();
            });
            $(document).ready(function() {
                $('#users').tooltip();
            });
            $(document).ready(function() {
                $('#charts').tooltip();
            });
            $(document).ready(function() {
                $('#settings').tooltip();
            });
            $(document).ready(function() {
                $('#stats').tooltip();
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
